<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Post:</strong>
  <%= @article.post %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user_id %>
</p>

<h2>Commnts</h2>
<% @article.comments.each do |comment| %>
<p>
	<strong>Commenter:</strong>
	<% comment.commenter %>
</p>

<p>
        <strong>Comment body:</strong>
	<%= comment.body %>
</p>
<% end %>

<h2>Do you want to add a comment? Add it!:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
<p>
	<%= f.label :commenter %><br />
	<%= f.text_field :commnter %>
</p>

<p>
        <%= f.label :body %><br />
        <%= f.text_field :body %>
</p>

<p>
	<%= f.submit %>
</p>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
